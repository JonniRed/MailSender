<Window x:Class="TestWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPF"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="850">
    <Grid>
        <Button Content="Send" HorizontalAlignment="Left" Margin="314,279,0,0" VerticalAlignment="Top" Height="55" Width="225" Click="OnSendButtonClick"/>
        <TextBox x:Name="UserNameEdit"
            HorizontalAlignment="Left" Margin="139,196,0,0" Text="UserName" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" Height="21"/>
        <PasswordBox x:Name="PasswordEdit"
            HorizontalAlignment="Left" Margin="564,196,0,0" VerticalAlignment="Top" Width="225" Height="21" Password="password"/>
        <TextBlock HorizontalAlignment="Left" Margin="139,129,0,0" Text="Имя пользователя" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="225"/>
        <TextBlock HorizontalAlignment="Left" Margin="583,129,0,0" Text="Пароль" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="206"/>
        <xctk:ColorPicker VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
